<%= form_for(:user, url: user_update_path, html: { method: :put }) do |f| %>
  
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :view_theme %><br />
    <%= f.select :view_theme, ['Classic', 'Modern'] %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>