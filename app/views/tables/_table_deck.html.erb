<% counter = @game.deck.deck_cards.count - @game.deck.cursor %>
<% deckTrump = @game.deck.deck_cards[35] %>
<% if counter > 2 %>
	<ul class="tableCardsList hitCards">
		<li>
			<div class="t_playerCards">
				<div class="<%= current_user.view_theme.to_s %>Rang">
					<%= make_rank (deckTrump) %>						
				</div>
				<div class="<%= current_user.view_theme.to_s %>Suite">
					<%= make_suite (deckTrump.suite) %>						
				</div>
				<div class="t_<%= current_user.view_theme.to_s + deckTrump.rang.to_s + deckTrump.suite.to_s %>"></div>				
			</div>
		</li>
	</ul>
	<ul class="tableCardsList defenceCards">
		<li>
			<div class="t_playerDeck">
				<div class="t_<%= current_user.view_theme.to_s %>Deck"></div>	
			</div>
		</li>
	</ul>


<% elsif counter == 2 %>
	<ul class="tableCardsList hitCards">
		<li>
			<div class="t_playerCards">
				<div class="<%= current_user.view_theme.to_s %>Rang">							
					<%= make_rank (deckTrump) %>						
				</div>
				<div class="<%= current_user.view_theme.to_s %>Suite">							
					<%= make_suite (deckTrump.suite) %>						
				</div>
				<div class="t_<%= current_user.view_theme.to_s + deckTrump.rang.to_s + deckTrump.suite.to_s %>"></div>				
			</div>
		</li>
	</ul>
	<ul class="tableCardsList defenceCards">
		<li>
			<div class="t_playerCards">
				<div class="t_<%= current_user.view_theme.to_s %>Back"></div>	
			</div>
		</li>
	</ul>
	
<% elsif counter == 1 %>
	<ul class="tableCardsList hitCards">
		<li>
			<div class="t_playerCards">
				<div class="<%= current_user.view_theme.to_s %>Rang">							
					<%= make_rank (deckTrump) %>						
				</div>
				<div class="<%= current_user.view_theme.to_s %>Suite">							
					<%= make_suite (deckTrump.suite) %>						
				</div>
				<div class="t_<%= current_user.view_theme.to_s + deckTrump.rang.to_s + deckTrump.suite.to_s %>"></div>				
			</div>
		</li>
	</ul>
<% else %>
	<ul class="tableCardsList hitCards">
		<li>
		</li>
	</ul>
<% end %>