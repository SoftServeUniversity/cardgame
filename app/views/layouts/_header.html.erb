<div id="mainHead" class="navbar navbar-inverse navbar-top">
	<div class="container">
	<div class="row">
		<div class="col-xs-4" id="logo">
			<%= link_to root_path do %>
				<%= image_tag("dooraque.png") %>
			<% end %>
		</div>
		
		<div class="col-xs-4 divCenter">
		</div>

		<div class="col-xs-4">
			<% if user_signed_in? %>
				<div class="headerUserBar">
					<ul class="nav navbar-nav navbar-right">
						<li class="dropdown text-center">
							<a id="userDropdown" class="dropdown-toggle" data-toggle='dropdown' aria_haspopup='true'>
								<b>
									<span class="glyphicon glyphicon-user" aria-hidden="true"></span>&nbsp;&nbsp;
									<span>
										<% if (current_user.username == "") || (current_user.username == nil) %>
											<%= current_user.email %>
										<% else %>
											<%= current_user.username %>
										<% end %>
									</span>
									<span class="caret"></span>
								</b>
							</a>
							<ul class="dropdown-menu" role="menu" >
								<li>
									<%= link_to user_show_path(current_user), class: "" do %>
										<span class="glyphicon glyphicon-home" aria-hidden="true"></span>&nbsp;&nbsp;&nbsp;<span>My&nbsp;Cabinet</span>
									<% end %>
								</li>
								<li>
									<%= link_to edit_user_registration_path, class: "" do %>
										<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;&nbsp;&nbsp;<span>Edit&nbsp;Profile</span>
									<% end %>
								</li>
								<li role="presentation" class="divider"></li>
								<li>
									<%= link_to destroy_user_session_path, :method => :delete, class: "" do %>
										<span class="glyphicon glyphicon-off" aria-hidden="true"></span>&nbsp;&nbsp;&nbsp;<span>Log&nbsp;out</span>
									<% end %>
								</li>		
							</ul>	
						</li>
					</ul>
				</div>
			<% else %>
				<div id="logInForm" class="hide">
					<%= form_for(:user, :as => :user, :url => session_path(:user), :html => {:class => "new_user"}) do |f| %>
						<%= f.label :login, "Email:" %>
						<%= f.text_field :login, :placeholder => "Email", class: "form-control" %>
						<%= f.label :password, "Password:" %>
						<%= f.password_field :password, :placeholder => "Password", class: "form-control" %>
						<%= f.submit 'Log in', class: "submitButton" %>
					<% end %>
				</div>
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to 'Log in', "#", class: "logInGroup", id: "logInButton" %></li>
					<li><%= link_to 'Register', new_user_registration_path, class: "logInGroup" %></li>
				</ul>
			<% end %>
		</div>
	</div>
	</div>
</div>
<div id="headNav" class="col-md-12">
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<span><%= link_to 'Home', root_path, class: "text-muted" %></span>
				<span><%= link_to 'Games', games_path, class: "text-muted" %></span>
				<span><%= link_to 'Statistics', statistic_path, class: "text-muted" %></span>
			</div>
		</div>
	</div>
</div>