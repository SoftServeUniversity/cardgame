<h1>----------Table----------</h1>
<div id = "table_cards" class="row">
	<%= render partial: 'tables/table' %>
</div>

<div id = "table_player_cards" class="row">
	<%= render partial: 'tables/table_player_cards'%>
</div>

<%= link_to 'reload', url: url_for( :controller => :games, :action => :show ) , remote: true, :method => :get %><br/>

<%= link_to "End Turn", end_turn_url, :method => :post %>
<%= link_to 'Edit', edit_game_path(@game) , :class => "btn btn-info" %> |
<%= link_to 'Back', games_path , :class => "btn btn-danger" %>

	<p>Cards count: <%= current_user.player.cards_count %>
	<p>Mover: <%= @game.mover %></p>
	<p>Player ID: <%= current_user.player.id %></p>
	<p>Player Game state: <%= current_user.player.game.state_name %></p>
	<p>Attacker: <%= @game.attacker %></p>
	<p>Defender: <%= @game.defender %></p>
	<% if @game.deck %>
		<p>Trump: <%= @game.deck.trump %></p>
	<% end %>