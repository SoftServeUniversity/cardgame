<% counter = @game.deck.deck_cards.count - @game.deck.cursor %>
<% deckTrump = @game.deck.deck_cards[35] %>
<% if counter > 2 %>
	<ul class="tableCardsList hitCards">
		<li>
			<div class="t_playerModernCards">
				<div class="mRang">
					<%= make_rank (deckTrump) %>						
				</div>
				<div class="mSuite">
					<%= make_suite (deckTrump.suite) %>						
				</div>
				<div class="t_m<%= deckTrump.rang.to_s + deckTrump.suite.to_s %>"></div>				
			</div>
		</li>
	</ul>
	<ul class="tableCardsList defenceCards">
		<li>
			<div class="t_playerModernDeck">
				<div class="t_modernDeck"></div>	
			</div>
		</li>
	</ul>


<% elsif counter == 2 %>
	<ul class="tableCardsList hitCards">
		<li>
			<div class="t_playerModernCards">
				<div class="mRang">							
					<%= make_rank (deckTrump) %>						
				</div>
				<div class="mSuite">							
					<%= make_suite (deckTrump.suite) %>						
				</div>
				<div class="t_m<%= deckTrump.rang.to_s + deckTrump.suite.to_s %>"></div>				
			</div>
		</li>
	</ul>
	<ul class="tableCardsList defenceCards">
		<li>
			<div class="t_playerModernCards">
				<div class="t_modernBack"></div>	
			</div>
		</li>
	</ul>
	
<% elsif counter == 1 %>
	<ul class="tableCardsList hitCards">
		<li>
			<div class="t_playerModernCards">
				<div class="mRang">							
					<%= make_rank (deckTrump) %>						
				</div>
				<div class="mSuite">							
					<%= make_suite (deckTrump.suite) %>						
				</div>
				<div class="t_m<%= deckTrump.rang.to_s + deckTrump.suite.to_s %>"></div>				
			</div>
		</li>
	</ul>
<% else %>
	<ul class="tableCardsList hitCards">
		<li>
		</li>
	</ul>
<% end %>