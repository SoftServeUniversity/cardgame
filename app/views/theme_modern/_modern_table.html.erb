<% if @game.table %>
	<% hitCards = [] %>
	<% @game.table.table_cards.each_index do |index| %>
		<% if (index) % 2 == 0 %>
			<% hitCards << @game.table.table_cards[index] %>
		<% end %>
	<% end %>
	<% defenceCards = @game.table.table_cards - hitCards %>

	<ul class="tableCardsList hitCards">
		<% hitCards.each do |card| %>
			<li>
				<div class="t_playerModernCards">
					<div class="mRang">
						<%= make_rank (card) %>						
					</div>
					<div class="mSuite">
						<%= make_suite (card.suite) %>						
					</div>
					<div class="t_m<%= card.rang.to_s + card.suite.to_s %>"></div>				
				</div>
			</li>
		<% end %>
	</ul>

	<ul class="tableCardsList defenceCards">
		<% defenceCards.each do |card| %>
			<li>
				<div class="t_playerModernCards">
					<div class="mRang">							
						<%= make_rank (card) %>						
					</div>
					<div class="mSuite">
						<%= make_suite (card.suite) %>						
					</div>
					<div class="t_m<%= card.rang.to_s + card.suite.to_s %>"></div>				
				</div>
			</li>
		<% end %>
	</ul>
<%end%>